
@{
    Layout = null;
}
<input class="form-control" name="id_reportes" required value="@Model.id_reportes" hidden />
<div class="form-group">
    <label for="date">Dia</label>
    <input class="form-control" type="date" id="date" name="dia" required value="@ViewData["date"]" />
</div>
<div class="form-group">
    <label for="nombre">Descripcion</label>
    <input type="text" name="descripcion" class="form-control" id="descripcion" value="@Model.descripcion" placeholder="Descripcion" required />
</div>
<div class="form-group">
    <label for="apellido">Costo</label>
    <input type="text" name="dosto" class="form-control" id="dosto" value="@Model.descripcion" placeholder="Costo" required />
</div>