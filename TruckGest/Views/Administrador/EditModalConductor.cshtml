
@{
    Layout = null;
}
<input value="@Model.id_conductor" name="id_conductor" hidden />

<div class="form-group">
    <label for="nombre">Nombres</label>
    <input type="text" name="nombre" class="form-control" id="nombre" placeholder="Nombres" value="@Model.nombre" required>
</div>
<div class="form-group">
    <label for="apellido">Apellidos</label>
    <input type="text" name="apellidos" class="form-control" id="apellido" placeholder="Apellidos" value="@Model.apellidos" required>
</div>
<div class="form-group">
    <label for="edad">Edad</label>
    <input type="number" name="edad" class="form-control" id="edad" value="@Model.edad" placeholder="Edad">
</div>
<div class="form-group">
    <label for="telefono">Celular</label>
    <input type="number" name="telefono" class="form-control" id="telefono" value="@Model.telefono" placeholder="Celular">
</div>
<div class="form-group">
    <label for="correo">Correo</label>
    <input type="text" name="correo" class="form-control" id="correo" placeholder="Correo electronico" value="@Model.correo" required>
</div>
<div class="form-check form-switch">
    @if (Model.operativo)
    {
        <input class="form-check-input checkboxswitch" type="checkbox" role="switch" id="Operativo" name="operativo" value="true" checked>
    }
    else
    {
        <input class="form-check-input checkboxswitch" type="checkbox" role="switch" id="Operativo" name="operativo" value="false">

    }
    <label class="form-check-label" for="Operativo">Operativo</label>
</div>

<div class="form-group">
    <label for="licencia">licencia</label>
    <select class="form-control" name="licencia" id="licencia">
        @foreach (var i in ViewBag.licTypes)
        {
            if (i == Model.licencia)
            {
                <option selected value="@i">@i</option>

            }
            else
            {
                <option value="@i">@i</option>

            }
        }
    </select>
</div>
<script src="~/Scripts/Views/modalConductorForAdministrador.js"></script>